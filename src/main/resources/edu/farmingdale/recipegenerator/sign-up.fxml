<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.farmingdale.recipegenerator.SignUpController">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImageView" fitHeight="900" fitWidth="1400" />

    <!-- Title -->
    <Text text="Sign Up" layoutX="180" layoutY="60" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: white;" />

    <!-- Username Field -->
    <TextField fx:id="usernameField" layoutX="100" layoutY="130" promptText="Username"
               style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.7); -fx-text-fill: black; -fx-prompt-text-fill: #888; -fx-font-size: 14px;" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" layoutX="100" layoutY="180" promptText="Password"
                   style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.7); -fx-text-fill: black; -fx-prompt-text-fill: #888; -fx-font-size: 14px;" />

    <!-- Confirm Password Field -->
    <PasswordField fx:id="confirmPasswordField" layoutX="100" layoutY="230" promptText="Confirm Password"
                   style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.7); -fx-text-fill: black; -fx-prompt-text-fill: #888; -fx-font-size: 14px;" />

    <!-- Sign Up Button -->
    <Button fx:id="signUpButton" text="Create Account" layoutX="100" layoutY="280" onAction="#handleSignUpButtonAction"
            style="-fx-pref-width: 250px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

</AnchorPane>
