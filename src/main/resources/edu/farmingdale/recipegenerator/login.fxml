<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.farmingdale.recipegenerator.LoginController"
            prefWidth="1400" prefHeight="900">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImageView" fitHeight="900" fitWidth="1400" />

    <!-- App Title -->
    <Text fx:id="titleText" text="AI Recipe Generator"
          layoutX="500" layoutY="60"
          style="-fx-font-family: 'Georgia'; -fx-font-size: 40px; -fx-font-weight: bold;
                 -fx-fill: linear-gradient(to right, #9B4DFF, #ADD8E6);" />

    <!-- Tagline with transition -->
    <Text fx:id="titlePhrase" text=" - Your personal chef, powered by AI"
          layoutX="630" layoutY="150"
          style="-fx-font-family: 'Georgia'; -fx-font-size: 36px;-fx-font-style: italic;-fx-font-weight: bold;
                 -fx-fill: linear-gradient(to right, #FFD700, #FF8C00);" />

    <!-- Username Field -->
    <TextField fx:id="usernameTextField" layoutX="60" layoutY="200" promptText="Username"
               style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.7);
                      -fx-text-fill: black; -fx-prompt-text-fill: #888; -fx-font-size: 14px;" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" layoutX="60" layoutY="250" promptText="Password"
                   style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.7);
                          -fx-text-fill: black; -fx-prompt-text-fill: #888; -fx-font-size: 14px;" />

    <!-- Login Button -->
    <Button fx:id="loginButton" text="Log In" layoutX="60" layoutY="300" onAction="#handleLoginButtonAction"
            style="-fx-pref-width: 250px; -fx-background-color: #4CAF50;
                   -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Sign Up Button -->
    <Button fx:id="signUpButton" text="Sign Up" layoutX="60" layoutY="350" onAction="#handleSignUpButtonAction"
            style="-fx-pref-width: 250px; -fx-background-color: #FF9800;
                   -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Page Title -->
    <Text text="Login" layoutX="60" layoutY="160"
          style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: white;" />
</AnchorPane>
