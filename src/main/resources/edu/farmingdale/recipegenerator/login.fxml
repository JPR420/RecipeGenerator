<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.farmingdale.recipegenerator.LoginController">
    <TextField fx:id="usernameTextField" layoutX="100" layoutY="100" promptText="Username" />
    <PasswordField fx:id="passwordField" layoutX="100" layoutY="150" promptText="Password" />
    <Button fx:id="loginButton" text="Log In" layoutX="100" layoutY="200" onAction="#handleLoginButtonAction"/>
    <Button fx:id="signUpButton" text="Sign Up" layoutX="200" layoutY="200" onAction="#handleSignUpButtonAction"/>
</AnchorPane>
