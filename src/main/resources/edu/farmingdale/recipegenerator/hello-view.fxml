<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorPane" prefHeight="675.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.farmingdale.recipegenerator.HelloController">

    <children>

        <!-- Fridge Pane (Image + Item Overlays) -->
        <AnchorPane fx:id="fridgePane" layoutX="20.0" layoutY="450.0" prefWidth="280.0" prefHeight="200.0">
            <ImageView fx:id="fridgeImageView" fitWidth="280.0" fitHeight="200.0" />
        </AnchorPane>

        <!-- Input Fields -->
        <TextField fx:id="nameTextField" layoutX="74.0" layoutY="178.0" promptText="Enter Item name" />
        <TextField fx:id="quantityTextField" layoutX="74.0" layoutY="260.0" promptText="Enter Quantity" />
        <TextField fx:id="weightTextField" layoutX="74.0" layoutY="338.0" promptText="Enter Weight" />

        <!-- Labels for Inputs -->
        <Label layoutX="14.0" layoutY="182.0" text="Name: " />
        <Label layoutX="14.0" layoutY="264.0" text="Quantity: " />
        <Label layoutX="14.0" layoutY="342.0" text="Weight: " />
        <Label fx:id="alertLabel" alignment="CENTER" layoutX="21.0" layoutY="123.0" prefHeight="17.0" prefWidth="243.0" />

        <!-- Buttons -->
        <Button fx:id="addButton" layoutX="123.0" layoutY="397.0" mnemonicParsing="false" onAction="#addToTableView" text="Add" />
        <Button fx:id="generateButton" layoutX="357.0" layoutY="410.0" mnemonicParsing="false" onAction="#generateButtonMethod" text="Generate" />

        <!-- Table View -->
        <TableView fx:id="tableView" layoutX="247.0" layoutY="178.0" prefHeight="200.0" prefWidth="284.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="107.0" text="Name" />
                <TableColumn fx:id="quantityColumn" prefWidth="86.0" text="Quantity" />
                <TableColumn fx:id="weightColumn" prefWidth="91.0" text="Weight" />
            </columns>
        </TableView>

        <!-- Recipe Output Area -->
        <TextArea fx:id="responseTextArea" layoutX="540.0" layoutY="178.0" prefHeight="493.0" prefWidth="457.0" />

        <!-- Title -->
        <Label fx:id="welcomeText" alignment="CENTER" layoutX="362.0" layoutY="61.0" prefHeight="28.0" prefWidth="276.0" text="Welcome to FlavorBot">
            <font>
                <Font size="19.0" />
            </font>
        </Label>

    </children>
</AnchorPane>
